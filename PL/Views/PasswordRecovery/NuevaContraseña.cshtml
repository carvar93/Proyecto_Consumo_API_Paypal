@model UI.Models.ViewModels.RecoveryChangeViewModel
@{
    ViewBag.Title = "NuevaContraseña";
}


@if (ViewBag.message != null)
{
    <div class="mt-5 alert alert-info alert-dismissible fade show" role="alert">
        <strong>@ViewBag.message.</strong> Vuelva a iniciar sesión
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="container pt-5 text-white text-center">
    <div class="col-md-4 mx-auto">
        <div class="card bg-dark">
            <form action="@Url.Content("~/PasswordRecovery/NuevaContraseña")" method="post" class="container">
                @Html.HiddenFor(d => d.Token)
                <label class="mt-3">Nueva Contraseña</label>
                <div class="form-group">
                    @Html.PasswordFor(d => d.Password, new { @class = "form-control border-0" })
                    @Html.ValidationMessageFor(d => d.Password, null, new { @class = "text-danger" })
                </div>
                <label>Confirmar Contraseña</label>
                <div class="form-group">
                    @Html.PasswordFor(d => d.ConPassword, new { @class = "form-control border-0" })
                    @Html.ValidationMessageFor(d => d.ConPassword, null, new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-secondary btn-block mb-3">Actualizar</button>
            </form>
        </div>
    </div>
</div>

