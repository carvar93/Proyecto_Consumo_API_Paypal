<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Aeronaves</title>
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Estilos/css")*@

    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>
<body>

    @*<script>
            $(document).ready(function () {



            })
        </script>*@


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AERONAVES", "Registro", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Registro", "Registro", "Home", new { area = "" }, new { @class = "" })</li>
                    @*<li>
                            @{

                                if (Session["perfilUsuario"] != null)
                                {
                                    var perfil = Convert.ToString(Session["perfilUsuario"]);

                                    if (perfil.ToLower() == "administrador")
                                    {
                                        @Html.ActionLink("Mantenimiento", "Mantenimiento", "Home", new { area = "" }, new { @class = "" })
                                    }
                                }

                            }
                        </li>*@
                    <li>@Html.ActionLink("Consultas", "Consultas", "Home", new { area = "" }, new { @class = "" })</li>

                </ul>
                <ul class="nav navbar-nav  pull-right">
                    <li> @Html.ActionLink("Salir", "Index", "Home", new { area = "" }, new { id = "loguot", @class = "" })</li>
                    @{
                        if (Session["nombre"] != null)
                        {
                            var nombre = Convert.ToString(Session["nombre"]);
                            <li>
                                @Html.ActionLink(nombre, "")
                            </li>
                        }
                    }
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AERONAVES</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

