@model UI.Models.ViewModels.usuarioViewModel

@{
    ViewBag.Title = "agregarUsuario";
}

<div class="container col-md-6 pt-5">
    <div class="card bg-dark mx-auto text-center">
        <div class="card-header">
            <img src="https://logodownload.org/wp-content/uploads/2014/10/paypal-logo-4.png" style="width:290px;height:auto;" alt="PayPalIMG" />
        </div>
        <div class="card-body">
            <h3 class="text-center text-white pb-3">Registrarse</h3>

            @using (Html.BeginForm())
            {

                @*@Html.AntiForgeryToken()*@

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._Nombre, new { htmlAttributes = new { placeholder = "Nombre", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._Apellido, new { htmlAttributes = new { placeholder = "Apellido", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._Cedula, new { htmlAttributes = new { placeholder = "Cédula", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._Cedula, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._Telefono, new { htmlAttributes = new { placeholder = "Teléfono", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._Correo, new { htmlAttributes = new { placeholder = "Correo", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._Correo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._User, new { htmlAttributes = new { placeholder = "Usuario", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._User, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model._Pass, new { htmlAttributes = new { placeholder = "Contraseña", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model._Pass, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                        @Html.LabelFor(model => model._Estado, htmlAttributes: new { @class = "text-white" })
                        <div class="col-md-12">
                            <div class="form-check">
                                @Html.EditorFor(model => model._Estado, new { htmlAttributes = new { @class = "form-check-input" } })
                                @Html.ValidationMessageFor(model => model._Estado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="col-md-12">
                            <input type="submit" value="Registrarse" class="btn btn-secondary btn-block" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
